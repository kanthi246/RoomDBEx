<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.triviaapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_title"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_title"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.History"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Summary"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.QuestionTwo"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.QuestionOne"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Welcome"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>